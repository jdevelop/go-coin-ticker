{
    "version": "0.1.0",
    "command": "bash",
    "isShellCommand": true,
    "showOutput": "always",
    "args": [
        "-c"
    ],
    "options": {
        "cwd": "${fileDirname}"
    },
    "tasks": [
        {
            "taskName": "Go Build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "args": [
                "go build"
            ]
        },
        {
            "taskName": "Go Test",
            "suppressTaskName": true,
            "isTestCommand": true,
            "args": [
                "go test . -v"
            ]
        }
    ]
}